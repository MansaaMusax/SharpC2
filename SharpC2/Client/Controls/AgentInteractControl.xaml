<UserControl x:Class="Client.Controls.AgentInteractControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Client.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <TextBox Text="{Binding AgentOutput}" IsReadOnly="True" TextWrapping="NoWrap" FontFamily="Consolas"/>
        </ScrollViewer>

        <DockPanel Grid.Row="1" LastChildFill="True" Height="30">
            <TextBlock Text="{Binding AgentLabel}" VerticalAlignment="Center" Width="65"/>
            <Button Margin="0" Padding="0" Height="0" Width="0" Command="{Binding SendAgentCommand}" IsDefault="True"/>
            <TextBox Text="{Binding AgentCommand, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" FontFamily="Consolas" KeyUp="TextBox_KeyUp"/>
        </DockPanel>

    </Grid>

</UserControl>